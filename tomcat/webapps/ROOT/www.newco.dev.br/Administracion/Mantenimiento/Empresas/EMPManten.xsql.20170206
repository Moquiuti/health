	<form name="MantenEmpresa" action="EMPMantenSave.xsql" method="post">
	<xsql:include-owa>
	  <![CDATA[
		DECLARE
			US_ID		NUMBER;
    	BEGIN
			US_ID:=SEGURIDAD_PCK.CompruebaCodigoDeSesion('{@SES_ID}','EMPManten');
			IF US_ID>=0 THEN
				EMPRESAS_PCK.MostrarEmpresas('{@ID}',US_ID);
			END IF;				   
		END;
	]]>
	</xsql:include-owa>
   
