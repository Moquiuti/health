<?xml-stylesheet type="text/xsl" href="MantSubfamiliasHTML2022.xsl"?>

<Mantenimiento xmlns:xsql="urn:oracle-xsql" connection="newco">
  <xsql:set-stylesheet-param name="lang" value="{@lang}"/>
  <xsql:include-param name="US_ID"/>
  <xsql:include-param  name="CATPRIV_IDEMPRESA"/>
  <xsql:include-param  name="ACCION"/>
  <xsql:include-param  name="TIPO"/>
  <xsql:include-param  name="VENTANA"/>
  <xsql:include-param  name="STYLE"/>
  <xsql:include-param name="LANG" value="{@PRMLANG}"/>
  
  
  <xsql:include-owa>
<![CDATA[
DECLARE
	US_ID		NUMBER;
	v_Res		VARCHAR2(1000);
BEGIN
	US_ID:=SEGURIDAD_PCK.CompruebaCodigoDeSesion('{@SES_ID}','MantSubfamilias');	
	IF US_ID>=0 THEN
		
		--utilidades_pck.debug('XSQL. MantSubfamilias. Accion:{@ACCION}');
		
	  	IF 	'{@ACCION}' IS NOT NULL THEN	   
			v_Res:=CATALOGOPRIVADO_MANT_PCK.MODIFICARSUBFAMILIA(
				US_ID,
				'{@CATPRIV_IDEMPRESA}',
				'{@CATPRIV_IDFAMILIA}',
				'{@CATPRIV_ID}',
				'{@CATPRIV_REFERENCIA}',
				'{@CATPRIV_NOMBRE}',
				'{@CATPRIV_REFCLIENTE}',
				'{@CP_SF_IDSELECCION}',
				'{@ACCION}'
			);

			CATALOGOPRIVADO_MANT_PCK.SUBFAMILIA_XML(
				US_ID,
				'{@CATPRIV_IDEMPRESA}',
				'{@CATPRIV_IDFAMILIA}',
				utilidades_pck.Piece(v_Res,'|',0), 
				utilidades_pck.Piece(v_Res,'|',1)
			);
		ELSE
			CATALOGOPRIVADO_MANT_PCK.SUBFAMILIA_XML
			(
			  US_ID,
			  '{@CATPRIV_IDEMPRESA}',
			  '{@CATPRIV_IDFAMILIA}',
			  '{@CATPRIV_IDSUBFAMILIA}'
			);
		END IF;
	END IF;
END;
        ]]>
  </xsql:include-owa>
  
  
  <botones>
  
    <button label="Aceptar" caption="CATPRIV-0110">
      <name_function>ValidarFormulario</name_function>
