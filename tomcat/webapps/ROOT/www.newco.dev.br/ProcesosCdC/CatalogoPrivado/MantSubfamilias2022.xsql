    </button>
    
    
    <button label="Cancelar" caption="CATPRIV-0120">
      <name_location>BuscadorFrame.xsql</name_location>               
    </button>
    
    <button label="Cerrar" caption="CATPRIV-0115">
      <name_function>window.close</name_function>               
    </button>
    
  </botones>
  
  
</Mantenimiento>
